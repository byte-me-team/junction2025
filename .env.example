# copy this file to `.env` and adjust as needed

# app
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-me-with-a-long-random-string
FEATHERLESS_API_KEY=replace-me-with-featherless-key

# espoo events ingestion
ESPOO_EVENTS_WINDOW_DAYS=10
ESPOO_EVENTS_LIMIT=200
ESPOO_FORCE_REFRESH=false

# suggestion engine
MATCHED_SUGGESTION_TARGET=10
MATCHED_SUGGESTION_MODEL_BATCH=10
MATCHED_SUGGESTION_EVENT_LIMIT=200
MATCHED_SUGGESTION_GATEWAY_TOKEN=replace-me-with-a-long-random-string
MATCHED_SUGGESTION_ENSURE_CACHE_MS=5000
MATCHED_SUGGESTION_LOOKAHEAD_DAYS=7
MATCHED_SUGGESTION_MAX_PER_DAY=3

# postgres (docker compose defaults)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=appdb

# prisma connection strings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/appdb?schema=public
DATABASE_URL_DOCKER=postgresql://postgres:postgres@db:5432/appdb?schema=public

# prisma studio
PRISMA_STUDIO_PORT=5555

FEATHERLESS_API_KEY=...
# copy this file to `.env` and adjust as needed

# app
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-me-with-a-long-random-string
FEATHERLESS_API_KEY=replace-me-with-featherless-key

# espoo events ingestion
ESPOO_EVENTS_WINDOW_DAYS=10
ESPOO_EVENTS_LIMIT=200
ESPOO_EVENTS_RETENTION_DAYS=30
ESPOO_EVENTS_MODEL_LIMIT=25
ESPOO_SUGGESTION_CACHE_TTL_HOURS=24

# postgres (docker compose defaults)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=appdb

# prisma connection strings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/appdb?schema=public
DATABASE_URL_DOCKER=postgresql://postgres:postgres@db:5432/appdb?schema=public

# prisma studio
PRISMA_STUDIO_PORT=5555

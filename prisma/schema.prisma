generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String            @id @default(cuid())
  name          String?
  email         String            @unique
  emailVerified DateTime?
  passwordHash  String?
  city          String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  preferences   UserPreferences?
  relatives     Relative[]
  accounts      Account[]
  sessions      Session[]

  generalSuggestions GeneralSuggestion[]
  matchesAsUser Match[]          @relation("UserMatches")
  history       ActivityHistory[]
  calendarActivities CalendarActivity[]
}

enum ActivitySource {
  suggestion
  real_event
  relative
  calendar
}

model ActivityHistory {
  id          String          @id @default(cuid())
  userId      String
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String?
  partnerName String?
  source      ActivitySource
  metadata    Json?
  createdAt   DateTime        @default(now())

  @@index([userId, createdAt])
}

model CalendarActivity {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  note        String?
  partnerName String?
  dueDate     DateTime?
  source      ActivitySource? @default(calendar)
  sourceId    String?
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, dueDate])
}

model UserPreferences {
  id             String   @id @default(cuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  rawText        String
  normalizedJson Json

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Relative {
  id                String @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name              String 
  email             String?

  preferences       String[]
  dislikes          String[]
  matchesAsUser Match[]          @relation("RelativeMatches")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Match {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation("UserMatches", fields: [userId], references: [id])

  relativeId String
  relative   Relative @relation("RelativeMatches", fields: [relativeId], references: [id])

  user1Preferences Json
  user2Preferences Json

  suggestionsJson  Json

  createdAt DateTime @default(now())
}



//
// ACTIVITY SUGGESTIONS
//

model GeneralSuggestion {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title     String
  summary   String
  benefit   String
  metadata  Json?
  accepted  Boolean  @default(false)
  status    SuggestionStatus @default(pending)
  decisionAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
}

enum SuggestionStatus {
  pending
  accepted
  rejected
}
